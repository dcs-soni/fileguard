# ===========================================
# File Virus Scanner - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/virus_scanner
DB_HOST=localhost
DB_PORT=5432
DB_NAME=virus_scanner
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Redis (for BullMQ queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50

# ClamAV Configuration
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
CLAMAV_TIMEOUT=60000

# AWS Configuration (for production - Phase 6)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=
# SQS_QUEUE_URL=

# Worker Configuration
WORKER_CONCURRENCY=2
JOB_TIMEOUT_MS=300000
